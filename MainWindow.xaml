<Window x:Class="CMMDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMMDemoApp"
        xmlns:views="clr-namespace:CMMDemoApp.Views"
        xmlns:converters="clr-namespace:CMMDemoApp.Converters"
        mc:Ignorable="d"
        Title="KMM Demo App" Height="700" Width="1200"
        Background="{DynamicResource WindowBackgroundBrush}"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}">
    <DockPanel>
        <!-- Statusbar -->
        <StatusBar DockPanel.Dock="Bottom" Background="{DynamicResource PanelBackgroundBrush}" Foreground="{DynamicResource TextPrimaryBrush}" Height="28" Padding="10,0">
            <StatusBarItem MinWidth="300">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Status: "/>
                    <TextBlock Text="{Binding SelectedPoint.Name, TargetNullValue='No point selected'}" Margin="5,0,5,0" MinWidth="100"/>
                    <ProgressBar Value="{Binding SelectedPoint.MeasurementProgress}" Width="60" Height="14" Margin="5,0,5,0" 
                                 Visibility="{Binding SelectedPoint, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding SelectedPoint.MeasurementProgress, StringFormat={}{0:F0}%, TargetNullValue=''}" Width="35" 
                               Visibility="{Binding SelectedPoint, Converter={StaticResource NullToVisibilityConverter}}"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="Benutzer: Demo" Margin="5,0"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding Now, StringFormat='{}{0:HH:mm}'}" Margin="5,0"/>
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <!-- Splitter column -->
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>
            <!-- Linke Bedienleiste -->
            <Border Grid.Column="0" Margin="0,20,10,20" Style="{DynamicResource ModernPanel}" Panel.ZIndex="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Main Buttons -->
                    <StackPanel Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Button Height="56" Margin="10 10 10 0" Command="{Binding LoadModelCommand}" ToolTip="STL-Modell oder XML-Messdaten laden" Style="{DynamicResource ModernButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Datei laden" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Height="56" Margin="10 10 10 0" Command="{Binding StartMeasurementCommand}" ToolTip="Messung starten" Style="{DynamicResource ModernButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Messen" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Height="56" Margin="10 10 10 0" Command="{Binding ExportReportCommand}" ToolTip="Messbericht exportieren" Style="{DynamicResource ModernButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Export" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Height="56" Margin="10 10 10 0" Command="{Binding ShowDemoModelCommand}" ToolTip="Demo-Modell anzeigen" Style="{DynamicResource ModernButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Demo-Modell" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- Theme Switcher Control -->
                    <views:ThemeSelector Grid.Row="1" Margin="0,20,0,0"/>
                </Grid>
            </Border>
            <!-- Vertical GridSplitter between 3D and right panel -->
            <GridSplitter Grid.Column="2" Width="5" HorizontalAlignment="Left" VerticalAlignment="Stretch" Background="{DynamicResource PanelBorderBrush}" ShowsPreview="True"/>
            <!-- Rechte Infoleiste -->
            <Border Grid.Column="3" Margin="10,20,0,20" Style="{DynamicResource ModernPanel}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Visualization Section -->
                        <TextBlock Text="📊 Visualizations" FontWeight="Bold" FontSize="18" Margin="10,10,10,5"/>
                        <Button Style="{DynamicResource VisualizationButton}" Command="{Binding OpenStatisticsSummaryCommand}">
                            <StackPanel>
                                <TextBlock Text="Statistics Summary" FontWeight="SemiBold"/>
                                <TextBlock Text="Overview of measurement results" FontSize="11" Opacity="0.7"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource VisualizationButton}" Command="{Binding OpenPointDetailsCommand}">
                            <StackPanel>
                                <TextBlock Text="Individual Point Details" FontWeight="SemiBold"/>
                                <TextBlock Text="Detailed view of each measurement point" FontSize="11" Opacity="0.7"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource VisualizationButton}" Command="{Binding OpenToleranceAnalysisCommand}">
                            <StackPanel>
                                <TextBlock Text="Tolerance Analysis" FontWeight="SemiBold"/>
                                <TextBlock Text="Analysis of tolerance zones and deviations" FontSize="11" Opacity="0.7"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource VisualizationButton}" Command="{Binding OpenSuccessFailureStatusCommand}">
                            <StackPanel>
                                <TextBlock Text="Success/Failure Status" FontWeight="SemiBold"/>
                                <TextBlock Text="Overview of measurement status" FontSize="11" Opacity="0.7"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource VisualizationButton}" Command="{Binding OpenDeviationMeasurementsCommand}">
                            <StackPanel>
                                <TextBlock Text="Deviation Measurements" FontWeight="SemiBold"/>
                                <TextBlock Text="Analysis of measurement deviations" FontSize="11" Opacity="0.7"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource VisualizationButton}" Command="{Binding OpenGraphsCommand}">
                            <StackPanel>
                                <TextBlock Text="Graphs" FontWeight="SemiBold"/>
                                <TextBlock Text="Statistical graphs and charts" FontSize="11" Opacity="0.7"/>
                            </StackPanel>
                        </Button>

                        <!-- Export Section -->
                        <TextBlock Text="📤 Export Reports" FontWeight="Bold" FontSize="18" Margin="10,20,10,5"/>
                        <Button Style="{DynamicResource ExportButton}" Command="{Binding ExportPdfReportCommand}">
                            <StackPanel>
                                <TextBlock Text="PDF Report" FontWeight="SemiBold"/>
                                <TextBlock Text="Professional report with tables and statistics" FontSize="11" Opacity="0.7"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource ExportButton}" Command="{Binding ExportXmlDataCommand}">
                            <StackPanel>
                                <TextBlock Text="XML Data Export" FontWeight="SemiBold"/>
                                <TextBlock Text="Structured data export" FontSize="11" Opacity="0.7"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource ExportButton}" Command="{Binding ExportCsvDataCommand}">
                            <StackPanel>
                                <TextBlock Text="CSV Data Export" FontWeight="SemiBold"/>
                                <TextBlock Text="Spreadsheet-compatible format" FontSize="11" Opacity="0.7"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource ExportButton}" Command="{Binding ExportHtmlReportCommand}">
                            <StackPanel>
                                <TextBlock Text="HTML Report" FontWeight="SemiBold"/>
                                <TextBlock Text="Interactive web-based report" FontSize="11" Opacity="0.7"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </ScrollViewer>
            </Border>
            <!-- Central measurement panel -->
            <Border Grid.Column="1" Margin="0,20,10,20" Style="{DynamicResource ModernPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="10">
                        <TextBlock Text="📏 Messungen" FontWeight="Bold" FontSize="18"/>
                    </StackPanel>

                    <!-- Measurement TreeView -->
                    <TreeView Grid.Row="1" ItemsSource="{Binding Parts}" Margin="10" 
                             Style="{DynamicResource ModernTreeView}"
                             x:Name="MeasurementTreeView"
                             SelectedItemChanged="MeasurementTreeView_SelectedItemChanged"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                             ScrollViewer.CanContentScroll="True"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.Resources>
                            <!-- Tooltip Template for Part -->
                            <DataTemplate x:Key="PartTooltipTemplate">
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name, StringFormat=Teil: {0}}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding PartId, StringFormat=ID: {0}}"/>
                                    <TextBlock Text="{Binding Points.Count, StringFormat=Anzahl der Messpunkte: {0}}"/>
                                    <TextBlock Text="{Binding CompletionPercentage, StringFormat=Fortschritt: {0:F1}%}"/>
                                </StackPanel>
                            </DataTemplate>

                            <!-- Tooltip Template for Point -->
                            <DataTemplate x:Key="PointTooltipTemplate">
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name, StringFormat=Punkt: {0}}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Status, StringFormat=Status: {0}}"/>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Soll: ({0:F3}, {1:F3}, {2:F3})">
                                                <Binding Path="NominalX"/>
                                                <Binding Path="NominalY"/>
                                                <Binding Path="NominalZ"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock Text="{Binding ToleranceRange, StringFormat=Toleranzbereich: {0}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </TreeView.Resources>

                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Points}">
                                <Grid Margin="0,2">
                                    <Grid.ToolTip>
                                        <ToolTip Content="{Binding}" ContentTemplate="{StaticResource PartTooltipTemplate}"/>
                                    </Grid.ToolTip>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="🔨" FontSize="16" Margin="0,0,8,0" Grid.Column="0"/>
                                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Text=" [" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding PartId}" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock Text="]" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding CompletionPercentage, StringFormat={}{0:F0}%}"
                                             Grid.Column="2" Margin="10,0,0,0" 
                                             Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </Grid>

                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ToolTip>
                                                <ToolTip Content="{Binding}" ContentTemplate="{StaticResource PointTooltipTemplate}"/>
                                            </Grid.ToolTip>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                                <Ellipse Width="12" Height="12" Margin="0,0,8,0"
                                                         Fill="{Binding Status, Converter={StaticResource StatusToBrushConverter}}"/>
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                                <TextBlock Text=" - " Foreground="{DynamicResource TextSecondaryBrush}" Margin="4,0"/>
                                                <TextBlock Text="{Binding Deviation, StringFormat=Abw: {0:F3}}" 
                                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Margin="10,0" Text="{Binding ToleranceRange}" 
                                                     Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="10,0">
                                                <TextBlock Text="Status: " Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                <TextBlock Text="{Binding Status}" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            <Button Grid.Column="3" 
                                                    Command="{Binding DataContext.MeasurePointCommand, RelativeSource={RelativeSource AncestorType=TreeView}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{DynamicResource CompactMeasureButton}"
                                                    Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="▶" FontSize="9" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Messen" FontSize="11" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
