<Window x:Class="CMMDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMMDemoApp"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="KMM Demo App" Height="700" Width="1200"
        Background="{DynamicResource BackgroundBrush}">
    <DockPanel>
        <!-- Statusbar -->
        <StatusBar DockPanel.Dock="Bottom" Background="{DynamicResource PanelBackgroundBrush}" Foreground="{DynamicResource TextBrush}" Height="28" Padding="10,0">
            <StatusBarItem Content="Status: Bereit"/>
            <Separator/>
            <StatusBarItem Content="Benutzer: Demo"/>
            <Separator/>
            <StatusBarItem Content="{Binding Now, StringFormat='{}{0:HH:mm}'}" HorizontalAlignment="Right"/>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>
            <!-- Linke Bedienleiste -->
            <StackPanel Grid.Column="0" Margin="0,20,10,20" VerticalAlignment="Stretch" Background="{DynamicResource PanelBackgroundBrush}" 
                        Effect="{DynamicResource DropShadowEffect}" 
                        Panel.ZIndex="2" >
                <Button Height="56" Margin="10 10 10 0" Command="{Binding LoadModelCommand}" ToolTip="STL-Modell laden" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="📂" FontSize="24" Margin="0,0,8,0"/>
                        <TextBlock Text="STL Laden" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                </Button>
                <Button Height="56" Margin="10 10 10 0" Command="{Binding StartMeasurementCommand}" ToolTip="Messung starten" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="▶" FontSize="24" Margin="0,0,8,0"/>
                        <TextBlock Text="Messen" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                </Button>
                <Button Height="56" Margin="10 10 10 0" Command="{Binding ExportReportCommand}" ToolTip="Messbericht exportieren" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="📝" FontSize="24" Margin="0,0,8,0"/>
                        <TextBlock Text="Export" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                </Button>
                <Button Height="56" Margin="10 10 10 0" Click="ShowDemoModel_Click" ToolTip="Demo-Modell anzeigen" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🟧" FontSize="24" Margin="0,0,8,0"/>
                        <TextBlock Text="Demo-Modell" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <!-- 3D Viewport -->
            <Border Grid.Column="1" Margin="0,20,0,20" CornerRadius="12" Background="{DynamicResource PanelBackgroundBrush}" 
                    Effect="{DynamicResource DropShadowEffect}" >
                <WindowsFormsHost x:Name="OpenGLHost">
                    <!-- GLControl будет добавлен в code-behind -->
                </WindowsFormsHost>
            </Border>
            <!-- Rechte Infoleiste -->
            <StackPanel Grid.Column="2" Margin="10,20,0,20" Background="{DynamicResource PanelBackgroundBrush}" 
                        Effect="{DynamicResource DropShadowEffect}" >
                <TextBlock Text="📊 Gemessene Punkte" FontWeight="Bold" FontSize="18" Margin="10 10 10 5"/>
                <DataGrid ItemsSource="{Binding MeasurementResults}" AutoGenerateColumns="False" Height="220" Margin="10" 
                          Background="{DynamicResource PanelBackgroundBrush}" Foreground="{DynamicResource TextBrush}" 
                          BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                          RowBackground="#FFF" AlternatingRowBackground="#F5F7FA" 
                          ColumnHeaderHeight="32" RowHeight="28" FontSize="14">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Sollwert" Binding="{Binding Nominal}"/>
                        <DataGridTextColumn Header="Istwert" Binding="{Binding Actual}"/>
                        <DataGridTextColumn Header="Abweichung" Binding="{Binding Deviation}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock Text="📌 Details" FontWeight="Bold" FontSize="16" Margin="10 10 10 5"/>
                <TextBlock Text="{Binding SelectedPointInfo}" TextWrapping="Wrap" Margin="10 0 10 10"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
