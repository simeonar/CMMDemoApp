<Window x:Class="CMMDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMMDemoApp"
        mc:Ignorable="d"
        Title="KMM Demo App" Height="700" Width="1200"
        Background="{DynamicResource WindowBackgroundBrush}">
    <DockPanel>
        <!-- Statusbar -->
        <StatusBar DockPanel.Dock="Bottom" Background="{DynamicResource PanelBackgroundBrush}" Foreground="{DynamicResource TextPrimaryBrush}" Height="28" Padding="10,0">
            <StatusBarItem Content="Status: Bereit"/>
            <Separator/>
            <StatusBarItem Content="Benutzer: Demo"/>
            <Separator/>
            <StatusBarItem Content="{Binding Now, StringFormat='{}{0:HH:mm}'}" HorizontalAlignment="Right"/>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/> <!-- Splitter column -->
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>
            <!-- Linke Bedienleiste -->
            <Border Grid.Column="0" Margin="0,20,10,20" Style="{StaticResource ModernPanel}" Panel.ZIndex="2">
                <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                    <Button Height="56" Margin="10 10 10 0" Command="{Binding LoadModelCommand}" ToolTip="STL-Modell laden" Style="{StaticResource ModernButton}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📂" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="STL Laden" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Height="56" Margin="10 10 10 0" Command="{Binding StartMeasurementCommand}" ToolTip="Messung starten" Style="{StaticResource ModernButton}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="▶" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Messen" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Height="56" Margin="10 10 10 0" Command="{Binding ExportReportCommand}" ToolTip="Messbericht exportieren" Style="{StaticResource ModernButton}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📝" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Export" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Height="56" Margin="10 10 10 0" Command="{Binding ShowDemoModelCommand}" ToolTip="Demo-Modell anzeigen" Style="{StaticResource ModernButton}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="🟧" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Demo-Modell" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
            <!-- Vertical GridSplitter between 3D and right panel -->
            <GridSplitter Grid.Column="2" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{DynamicResource PanelBorderBrush}" ShowsPreview="True"/>
            <!-- Rechte Infoleiste -->
            <Border Grid.Column="3" Margin="10,20,0,20" Style="{StaticResource ModernPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5"/> <!-- Splitter row -->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="📊 Gemessene Punkte" FontWeight="Bold" FontSize="18" Margin="10 10 10 5" Grid.Row="0"/>
                    <DataGrid ItemsSource="{Binding MeasurementResults}" AutoGenerateColumns="False" Margin="10" 
                              Style="{StaticResource ModernDataGrid}"
                              VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Sollwert" Binding="{Binding Nominal}"/>
                            <DataGridTextColumn Header="Istwert" Binding="{Binding Actual}"/>
                            <DataGridTextColumn Header="Abweichung" Binding="{Binding Deviation}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!-- Horizontal GridSplitter between DataGrid and Details -->
                    <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{DynamicResource PanelBorderBrush}" ShowsPreview="True"/>
                    <TextBlock Text="📌 Details" FontWeight="Bold" FontSize="16" Margin="10 10 10 5" Grid.Row="3"/>
                    <TextBlock Text="{Binding SelectedPointInfo}" TextWrapping="Wrap" Margin="10 0 10 10" Grid.Row="4"/>
                </Grid>
            </Border>
            <!-- Central measurement panel -->
            <Border Grid.Column="1" Margin="0,20,10,20" Style="{StaticResource ModernPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="10">
                        <TextBlock Text="📏 Messungen" FontWeight="Bold" FontSize="18"/>
                    </StackPanel>
                    
                    <!-- Measurement TreeView -->
                    <TreeView Grid.Row="1" ItemsSource="{Binding Parts}" Margin="10" 
                              Style="{StaticResource ModernTreeView}">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Points}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    <TextBlock Text=" [" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    <TextBlock Text="{Binding PartId}" VerticalAlignment="Center"/>
                                    <TextBlock Text="]" VerticalAlignment="Center"/>
                                </StackPanel>
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                                <Ellipse Width="12" Height="12" Margin="0,0,8,0"
                                                         Fill="{Binding Status, Converter={StaticResource StatusToBrushConverter}}"/>
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="10,0">
                                                <TextBlock Text="Status: " Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                <TextBlock Text="{Binding Status}"/>
                                            </StackPanel>
                                            <Button Grid.Column="2" Content="Messen" 
                                                    Command="{Binding DataContext.MeasurePointCommand, RelativeSource={RelativeSource AncestorType=TreeView}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource ModernButton}"
                                                    Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}}"/>
                                        </Grid>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
