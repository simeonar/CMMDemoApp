<Window x:Class="CMMDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMMDemoApp"
        mc:Ignorable="d"
        Title="KMM Demo App" Height="700" Width="1200"
        Background="{DynamicResource WindowBackgroundBrush}">
    <DockPanel>
        <!-- Statusbar -->
        <StatusBar DockPanel.Dock="Bottom" Background="{DynamicResource PanelBackgroundBrush}" Foreground="{DynamicResource TextPrimaryBrush}" Height="28" Padding="10,0">
            <StatusBarItem MinWidth="300">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Status: "/>
                    <TextBlock Text="{Binding SelectedPoint.Name}" Margin="5,0,5,0" MinWidth="100"/>
                    <ProgressBar Value="{Binding SelectedPoint.MeasurementProgress}" Width="60" Height="14" Margin="5,0,5,0"/>
                    <TextBlock Text="{Binding SelectedPoint.MeasurementProgress, StringFormat={}{0:F0}%}" Width="35"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="Benutzer: Demo" Margin="5,0"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding Now, StringFormat='{}{0:HH:mm}'}" Margin="5,0"/>
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/> <!-- Splitter column -->
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>
            <!-- Linke Bedienleiste -->
            <Border Grid.Column="0" Margin="0,20,10,20" Style="{StaticResource ModernPanel}" Panel.ZIndex="2">
                <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                    <Button Height="56" Margin="10 10 10 0" Command="{Binding LoadModelCommand}" ToolTip="STL-Modell oder XML-Messdaten laden" Style="{StaticResource ModernButton}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📂" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Datei laden" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Height="56" Margin="10 10 10 0" Command="{Binding StartMeasurementCommand}" ToolTip="Messung starten" Style="{StaticResource ModernButton}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="▶" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Messen" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Height="56" Margin="10 10 10 0" Command="{Binding ExportReportCommand}" ToolTip="Messbericht exportieren" Style="{StaticResource ModernButton}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📝" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Export" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Height="56" Margin="10 10 10 0" Command="{Binding ShowDemoModelCommand}" ToolTip="Demo-Modell anzeigen" Style="{StaticResource ModernButton}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="🟧" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Demo-Modell" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
            <!-- Vertical GridSplitter between 3D and right panel -->
            <GridSplitter Grid.Column="2" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{DynamicResource PanelBorderBrush}" ShowsPreview="True"/>
            <!-- Rechte Infoleiste -->
            <Border Grid.Column="3" Margin="10,20,0,20" Style="{StaticResource ModernPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5"/> <!-- Splitter row -->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="📊 Gemessene Punkte" FontWeight="Bold" FontSize="18" Margin="10 10 10 5" Grid.Row="0"/>
                    <DataGrid ItemsSource="{Binding MeasurementResults}" AutoGenerateColumns="False" Margin="10" 
                              Style="{StaticResource ModernDataGrid}"
                              VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="80"/>
                            <DataGridTemplateColumn Header="Status" Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="12" Height="12" Margin="4,0"
                                                     Fill="{Binding Status, Converter={StaticResource StatusToBrushConverter}}"/>
                                            <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Soll (X,Y,Z)" Binding="{Binding Nominal}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Ist (X,Y,Z)" Binding="{Binding Actual}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Abw." Binding="{Binding Deviation, StringFormat=F3}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,8,0"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Toleranz" 
                                              Binding="{Binding ToleranceRange}" 
                                              Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!-- Horizontal GridSplitter between DataGrid and Details -->
                    <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{DynamicResource PanelBorderBrush}" ShowsPreview="True"/>
                    <TextBlock Text="📌 Details" FontWeight="Bold" FontSize="16" Margin="10 10 10 5" Grid.Row="3"/>
                    <TextBlock Text="{Binding SelectedPointInfo}" TextWrapping="Wrap" Margin="10 0 10 10" Grid.Row="4"/>
                </Grid>
            </Border>
            <!-- Central measurement panel -->
            <Border Grid.Column="1" Margin="0,20,10,20" Style="{StaticResource ModernPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="10">
                        <TextBlock Text="📏 Messungen" FontWeight="Bold" FontSize="18"/>
                    </StackPanel>
                    
                    <!-- Measurement TreeView -->
                    <TreeView Grid.Row="1" ItemsSource="{Binding Parts}" Margin="10" 
                             Style="{StaticResource ModernTreeView}"
                             SelectedItemChanged="TreeView_SelectedItemChanged">
                        <TreeView.Resources>
                            <!-- Tooltip Template for Part -->
                            <DataTemplate x:Key="PartTooltipTemplate">
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name, StringFormat=Teil: {0}}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding PartId, StringFormat=ID: {0}}"/>
                                    <TextBlock Text="{Binding Points.Count, StringFormat=Anzahl der Messpunkte: {0}}"/>
                                    <TextBlock Text="{Binding CompletionPercentage, StringFormat=Fortschritt: {0:F1}%}"/>
                                </StackPanel>
                            </DataTemplate>
                            
                            <!-- Tooltip Template for Point -->
                            <DataTemplate x:Key="PointTooltipTemplate">
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name, StringFormat=Punkt: {0}}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Status, StringFormat=Status: {0}}"/>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Soll: ({0:F3}, {1:F3}, {2:F3})">
                                                <Binding Path="NominalX"/>
                                                <Binding Path="NominalY"/>
                                                <Binding Path="NominalZ"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock Text="{Binding ToleranceRange, StringFormat=Toleranzbereich: {0}}"/>
                                </StackPanel>
                            </DataTemplate>
                            
                            <!-- Compact Button Style -->
                            <Style x:Key="CompactMeasureButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                <Setter Property="Padding" Value="6,2"/>
                                <Setter Property="Margin" Value="4,0,0,0"/>
                                <Setter Property="MinHeight" Value="20"/>
                                <Setter Property="Height" Value="20"/>
                                <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource AccentBackgroundBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TreeView.Resources>
                        
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Points}">
                                <Grid Margin="0,2">
                                    <Grid.ToolTip>
                                        <ToolTip Content="{Binding}" ContentTemplate="{StaticResource PartTooltipTemplate}"/>
                                    </Grid.ToolTip>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="🔨" FontSize="16" Margin="0,0,8,0" Grid.Column="0"/>
                                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Text=" [" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding PartId}" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock Text="]" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding CompletionPercentage, StringFormat={}{0:F0}%}"
                                             Grid.Column="2" Margin="10,0,0,0" 
                                             Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </Grid>
                                
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ToolTip>
                                                <ToolTip Content="{Binding}" ContentTemplate="{StaticResource PointTooltipTemplate}"/>
                                            </Grid.ToolTip>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                                <Ellipse Width="12" Height="12" Margin="0,0,8,0"
                                                         Fill="{Binding Status, Converter={StaticResource StatusToBrushConverter}}"/>
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                                <TextBlock Text=" - " Foreground="{DynamicResource TextSecondaryBrush}" Margin="4,0"/>
                                                <TextBlock Text="{Binding Deviation, StringFormat=Abw: {0:F3}}" 
                                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Margin="10,0" Text="{Binding ToleranceRange}" 
                                                     Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="10,0">
                                                <TextBlock Text="Status: " Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                <TextBlock Text="{Binding Status}" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            <Button Grid.Column="3" 
                                                    Command="{Binding DataContext.MeasurePointCommand, RelativeSource={RelativeSource AncestorType=TreeView}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource CompactMeasureButton}"
                                                    Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="▶" FontSize="9" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Messen" FontSize="11" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
