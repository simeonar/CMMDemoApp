<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Essential Colors -->
    <Color x:Key="PrimaryBackground">#FAFAFA</Color>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource PrimaryBackground}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#F2F2F2"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="PanelBorderBrush" Color="#E1E1E1"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D7"/>
    <SolidColorBrush x:Key="AccentBackgroundBrush" Color="#0078D7" Opacity="0.1"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#323130"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#605E5C"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#F6F6F6"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#E1E1E1"/>
    <SolidColorBrush x:Key="MeasurementCompleteBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="MeasurementPendingBrush" Color="#F2C811"/>
    <SolidColorBrush x:Key="MeasurementErrorBrush" Color="#D13438"/>
    
    <!-- Styles -->
    <Style x:Key="ModernPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <Style x:Key="ModernButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,8"/>
    </Style>

    <Style x:Key="CompactMeasureButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="MinHeight" Value="20"/>
        <Setter Property="Height" Value="20"/>
    </Style>
    
    <Style x:Key="ModernTreeView" TargetType="TreeView">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <!-- Button styles used in visualizations -->
    <Style x:Key="VisualizationButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>
    
    <Style x:Key="ExportButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>
    
    <!-- Optional button styles used in ThemeSelector -->
    <Style x:Key="ScientificButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
    </Style>
    
    <Style x:Key="IndustrialButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
    </Style>
    
    <Style x:Key="TechnicalButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
    </Style>
    
    <Style x:Key="FluentAccentButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
    </Style>
    
    <Style x:Key="FluentOutlinedButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
    </Style>
</ResourceDictionary>
