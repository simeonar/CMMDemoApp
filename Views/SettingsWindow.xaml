<Window x:Class="CMMDemoApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KMM-Einstellungen" Height="450" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <!-- Messeinstellungen -->
            <TabItem Header="🔧 Messung">
                <StackPanel Margin="20">
                    <GroupBox Header="Geschwindigkeitseinstellungen" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <Label Content="Messgeschwindigkeit (mm/min):"/>
                            <TextBox Text="{Binding Settings.MeasuringSpeed}" Margin="0,0,0,10"/>
                            
                            <Label Content="Antastkraft (N):"/>
                            <TextBox Text="{Binding Settings.ProbingForce}" Margin="0,0,0,10"/>
                            
                            <Label Content="Sicherheitsabstand (mm):"/>
                            <TextBox Text="{Binding Settings.SafetyDistance}"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Qualitätseinstellungen" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <Label Content="Messtoleranz (mm):"/>
                            <TextBox Text="{Binding Settings.MeasurementTolerance}" Margin="0,0,0,10"/>
                            
                            <Label Content="Anzahl Mittelwertpunkte:"/>
                            <TextBox Text="{Binding Settings.AveragingPoints}" Margin="0,0,0,10"/>
                            
                            <CheckBox Content="Automatische Kalibrierung" 
                                     IsChecked="{Binding Settings.AutoCalibrationEnabled}"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>

            <!-- Systemeinstellungen -->
            <TabItem Header="⚙️ System">
                <StackPanel Margin="20">
                    <GroupBox Header="Anzeigeeinstellungen" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <CheckBox Content="3D-Koordinatengitter anzeigen" IsChecked="True"/>
                            <CheckBox Content="Tastkopf-Trajektorie anzeigen" IsChecked="True" Margin="0,5,0,5"/>
                            <CheckBox Content="Toleranzbereich visualisieren" IsChecked="False"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Datenexport" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <CheckBox Content="Automatischer CSV-Export nach Messung" IsChecked="False"/>
                            <CheckBox Content="Q-DAS Format unterstützen" IsChecked="True" Margin="0,5,0,5"/>
                            <CheckBox Content="Backup-Dateien erstellen" IsChecked="True"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>

            <!-- Info -->
            <TabItem Header="ℹ️ Info">
                <StackPanel Margin="20">
                    <TextBlock Text="KMM Demo Anwendung" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="Version 1.0.0" Margin="0,0,0,10"/>
                    <TextBlock Text="Entwickelt für Demonstration von C# und WPF Kenntnissen" TextWrapping="Wrap" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Funktionen:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="• 3D-Visualisierung von Messobjekten und Tastkopf" Margin="0,0,0,3"/>
                    <TextBlock Text="• Import von CAD-Modellen (STL)" Margin="0,0,0,3"/>
                    <TextBlock Text="• Automatisierte Messprogramme" Margin="0,0,0,3"/>
                    <TextBlock Text="• Statistische Auswertung und Berichterstattung" Margin="0,0,0,3"/>
                    <TextBlock Text="• Integration mit Produktionssystemen" Margin="0,0,0,3"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="💾 Speichern" Command="{Binding SaveCommand}" Margin="0,0,10,0" Padding="15,5"/>
            <Button Content="❌ Abbrechen" Command="{Binding CancelCommand}" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
